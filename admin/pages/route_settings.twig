{% extends "layout.twig" %}

{% block title %}{{ "Route Settings" | translate }}{% endblock %}

{% block content %}
<form id="route_settings" class="split" action="{{ admin_url('route_settings') }}" method="post" accept-charset="utf-8" enctype="multipart/form-data">
<fieldset>
<p>
<label for="clean_urls">{{ "Clean URLs" | translate }}</label>
<input type="checkbox" name="clean_urls" id="clean_urls"{{ site.clean_urls | checked }}>
<span class="sub">{{ "(recommended)" | translate }}</span>
<small>
{{ "Gives your site prettier urls." | translate }} {{ "Requires .htaccess support." | translate }}
</small>
</p>
<p>
<label for="enable_homepage">{{ "Homepage" | translate }}</label>
<input class="checkbox" type="checkbox" name="enable_homepage" id="enable_homepage"{{ site.enable_homepage | checked }}>
<small>
{{ "Make the default route a homepage instead of the blog index." | translate }}
</small>
</p>
<p>
<label for="post_url">
{{ "Post View URL" | translate }}
<span class="sub">{{ "(requires clean URLs)" | translate }}</span>
</label>
<input class="text" type="text" name="post_url" value="{{ site.post_url | fix }}" size="30" id="post_url">
</p>
<div class="small">
<strong>{{ "Syntax:" | translate }}</strong>
<ul>
<li><code>(year)</code> {{ "Year submitted" | translate }} <span class="sub">{{ "(e.g. 2007)" | translate }}</span></li>
<li><code>(month)</code> {{ "Month submitted" | translate }} <span class="sub">{{ "(e.g. 12)" | translate }}</span></li>
<li><code>(day)</code> {{ "Day submitted" | translate }} <span class="sub">{{ "(e.g. 25)" | translate }}</span></li>
<li><code>(hour)</code> {{ "Hour submitted" | translate }} <span class="sub">{{ "(e.g. 03)" | translate }}</span></li>
<li><code>(minute)</code> {{ "Minute submitted" | translate }} <span class="sub">{{ "(e.g. 59)" | translate }}</span></li>
<li><code>(second)</code> {{ "Second submitted" | translate }} <span class="sub">{{ "(e.g. 30)" | translate }}</span></li>
<li><code>(id)</code> {{ "Post ID" | translate }}</li>
<li><code>(author)</code> {{ "Post author (username)" | translate }} <span class="sub">{{ "(e.g. Alex)" | translate }}</span></li>
<li><code>(clean)</code> {{ "The non-unique sanitized name" | translate }} <span class="sub">{{ "(e.g. this_is_clean)" | translate }}</span></li>
<li><code>(url)</code> {{ "The unique form of (clean)" | translate }} <span class="sub">{{ "(e.g. this_one_is_taken_2)" | translate }}</span></li>
<li><code>(feather)</code> {{ "The post's feather" | translate }} <span class="sub">{{ "(e.g. text)" | translate }}</span></li>
<li><code>(feathers)</code> {{ "The plural form of the post's feather" | translate }} <span class="sub">{{ "(e.g. links)" | translate }}</span></li>
{{ trigger.call("post_view_url_settings") }}
</ul>
</div>
<p class="buttons">
<button type="submit" class="yay"><img src="{{ site.chyrp_url }}/admin/images/icons/success.svg" alt="icon">{{ "Update" | translate }}</button>
</p>
<input type="hidden" name="hash" value="{{ ip | token }}" id="hash">
</fieldset>
</form>
{% endblock %}
