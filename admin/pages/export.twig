{% extends "layout.twig" %}

{% block title %}{{ "Export" | translate }}{% endblock %}

{% block content %}
<h2>{{ "What would you like to export?" | translate }}</h2>
<form id="export_form" class="split" action="{{ admin_url('export') }}" method="post" accept-charset="utf-8" enctype="multipart/form-data">
<fieldset>
<p>
<label for="posts">{{ "Posts" | translate }}</label>
<input class="checkbox" type="checkbox" name="posts" value="" id="posts" checked="checked">
<input class="text" type="text" name="filter_posts" value="" id="filter_posts" aria-label="{{ 'filter (optional)' | translate }}" placeholder="{{ 'filter (optional)' | translate }}">
<a href="{{ admin_url('help', {'id': 'filtering_results'}) }}" target="_blank" class="help emblem"><img src="{{ theme_url }}/images/icons/help.svg" alt="help"></a>
</p>
<p>
<label for="pages">{{ "Pages" | translate }}</label>
<input class="checkbox" type="checkbox" name="pages" value="" id="pages" checked="checked">
<input class="text" type="text" name="filter_pages" value="" id="filter_pages" aria-label="{{ 'filter (optional)' | translate }}" placeholder="{{ 'filter (optional)' | translate }}">
<a href="{{ admin_url('help', {'id': 'filtering_results'}) }}" target="_blank" class="help emblem"><img src="{{ theme_url }}/images/icons/help.svg" alt="help"></a>
</p>
<p>
<label for="groups">{{ "Groups" | translate }}</label>
<input class="checkbox" type="checkbox" name="groups" value="" id="groups" checked="checked">
<input class="text" type="text" name="filter_groups" value="" id="filter_groups" aria-label="{{ 'filter (optional)' | translate }}" placeholder="{{ 'filter (optional)' | translate }}">
<a href="{{ admin_url('help', {'id': 'filtering_results'}) }}" target="_blank" class="help emblem"><img src="{{ theme_url }}/images/icons/help.svg" alt="help"></a>
</p>
<p>
<label for="users">{{ "Users" | translate }}</label>
<input class="checkbox" type="checkbox" name="users" value="" id="users" checked="checked">
<input class="text" type="text" name="filter_users" value="" id="filter_users" aria-label="{{ 'filter (optional)' | translate }}" placeholder="{{ 'filter (optional)' | translate }}">
<a href="{{ admin_url('help', {'id': 'filtering_results'}) }}" target="_blank" class="help emblem"><img src="{{ theme_url }}/images/icons/help.svg" alt="help"></a>
<small>
<strong>{{ "Warning: this also exports the hashed passwords, keep it safe!" | translate }}</strong>
</small>
</p>
{{ trigger.call("export_choose") }}
<p class="buttons">
<button type="submit" class="yay"><img src="{{ theme_url }}/images/icons/success.svg" alt="success">{{ "Export" | translate }}</button>
</p>
<input type="hidden" name="hash" value="{{ ip | token }}" id="hash">
</fieldset>
</form>
{% endblock %}
