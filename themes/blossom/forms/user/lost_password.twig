{% extends "layouts/default.twig" %}

{% block content %}
<div class="lost_password standalone">
<h2>{{ "Lost password" | translate }}</h2>
<form action="{{ url('lost_password') }}" method="post">
<p class="lost_pass">{{ "Please enter your username below and we will email you a new password for your account." | translate }}</p>
<label for="login">{{ "Username" | translate }}</label>
<input type="text" name="login" value="" id="login">
<div class="doaction">
<button name="submit" type="submit" id="submit">{{ "Submit" | translate }}</button>
</div>
</form>
</div>
{% endblock %}
