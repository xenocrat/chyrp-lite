{% extends "layouts" ~ DIR ~ "default.twig" %}

{% block content %}
{% if tag_cloud is not empty %}
<div class="tags standalone">
<h2>{{ "Tag cloud" | translate }}</h2>
{% for tag in tag_cloud %}
<a class="tag" href="{{ tag.url }}" style="font-size: {{ tag.size + 100 }}%" title="{{ tag.title }}">{{ tag.name }}</a>
{% endfor %}
</div>
{% else %}
<div class="ribbon">
<h3 class="ribbon">{{ "Nothing here yet!" | translate }}</h3>
</div>
{% endif %}
{% endblock %}
