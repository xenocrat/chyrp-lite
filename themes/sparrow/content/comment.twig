<li id="comment_{{ comment.id }}">
{% if comment.status == "pingback" %}
<h3>{{ "%s:" | translate | format(comment.author_link) }}</h3>
{% else %}
<h3>{{ "%s said:" | translate | format(comment.author_link) }}</h3>
{% endif %}
<section class="comment">
{% if comment.status == "denied" %}
<em>{{ "This comment is awaiting moderation." | translate }}</em>
{% else %}
{{ comment.body }}
{% endif %}
</section>
<div class="doaction">
{{ comment.edit_link("Edit" | translate) }} {{ comment.delete_link("Delete" | translate) }}
</div>
<div class="metadata">
{{ comment.author_email | gravatar(80, true) }}
<cite>
{{ '<a href="%s" class="permalink">%s</a>' | format(comment.post.url() ~ "#comment_" ~ comment.id, comment.created_at | strftimeformat("%d %B, %Y, at %I:%M %p" | translate)) }}
</cite>
</div>
</li>
